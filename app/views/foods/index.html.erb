<h1 class="current-category"><%= params[:category] %></h1>

<% if @foods.count == 0 %>

	<h1>There are no books currently in this category</h1>

<% else %>	
	<div class="main-right-home">
		<div class="row">

			<% @foods.each do |food| %>

				<div class="col-md-3">
					<a href="/foods/<%= food.id %>">
						<%= image_tag food.food_img.url(:food_index), class: "food" %>
					</a>
				</div>	

			<% end %>

		</div>
	</div
	
<% end %>	
