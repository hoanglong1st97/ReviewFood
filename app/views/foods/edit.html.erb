<div class="col-md-6 col-md-offset-3">

	<div class="new-food-form">
        <h1>Sửa món ăn</h1>
        <%= simple_form_for @food, :html => { :multipart => true} do |f| %>
            <%= f.select :category_id, @categories %>
            <%= f.file_field :food_img %>
            <%= f.input :name, label:"Tên món:" %>
            <%= f.input :author, label:"Tên quán:"%>
            <%= f.input :desciption, label:"Mô tả:" %>
            <%= f.input :address, label:"Địa chỉ:" %>
            <%= f.input :time, label:"Giờ hoạt động:" %>
            <%= f.input :price, label:"Giá thành:"%>
            <%= f.input :sale, label:"Giảm giá:" %>
            <%= f.button :submit, :class => 'btn-custom2' %>
        <% end %>
    </div>
</div>